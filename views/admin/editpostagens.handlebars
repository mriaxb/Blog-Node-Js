{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem:</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}" id="">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" value="{{postagem.slug}}" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="">Categoria: </label>
            <select name="categorias" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-outline-secondary mt-3" >Editar postagem</button>
        </form>
    </div>
</div>