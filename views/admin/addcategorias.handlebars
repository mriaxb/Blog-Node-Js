<h3>Nova categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control">
            <br>
            <label for="slug">Slug:</label>
                <input type="texto" name="slug" id="slug" placeholder="Slug da categoria" class="form-control">
            <br>

            {{#each erros}}
                <div class="alert alert-danger">{{texto}}</div>
            {{else}}
            {{/each}}
            <button type="submit " class="btn btn-dark">Criar categoria</button>
        </form>
    </div>
</div>
