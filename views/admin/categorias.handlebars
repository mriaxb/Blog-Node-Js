<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"> 
    <button class="btn btn-outline-secondary" >Nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <hr>
            <small>Data de criação: {{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-secondary mt-2 btn-sm">Editar</button> </a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" id="id" value="{{_id}}">
                <button type="submit" class="btn btn-dark btn-sm mt-1">Deletar</button>
            </form>
        </div>
    </div>

{{else}}

    <h4 class="mt-4">Nenhuma categoria registrada :(</h4>
{{/each}}