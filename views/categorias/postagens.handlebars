<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-sm btn-secondary">Leia mais</button></a>
        <hr>
        <small>Data de Publicação: {{data}} </small>
    </div>
</div>

{{else}}
    <hr>
    <p>Nenhuma postagem nessa categoria</p>
{{/each}}